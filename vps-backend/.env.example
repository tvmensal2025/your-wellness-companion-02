# ===========================================
# MaxNutrition VPS Backend - Configuração
# ===========================================

# Servidor
PORT=3000
NODE_ENV=production
API_SECRET_KEY=sua-chave-secreta-aqui

# MinIO (Storage)
MINIO_ENDPOINT=minio.seudominio.com
MINIO_PORT=9000
MINIO_USE_SSL=true
MINIO_ACCESS_KEY=seu-access-key
MINIO_SECRET_KEY=seu-secret-key
MINIO_BUCKET=images
MINIO_PUBLIC_URL=https://minio.seudominio.com

# Supabase (para sync com banco)
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_SERVICE_KEY=sua-service-role-key

# WhatsApp Evolution API
EVOLUTION_API_URL=https://evolution.seudominio.com
EVOLUTION_API_KEY=sua-api-key
EVOLUTION_INSTANCE=maxnutrition

# WhatsApp Whapi (alternativo)
WHAPI_API_URL=https://gate.whapi.cloud
WHAPI_TOKEN=seu-token

# YOLO Service (já existente)
YOLO_SERVICE_URL=https://yolo-service-yolo-detection.0sw627.easypanel.host

# Ollama (IA local - opcional)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
